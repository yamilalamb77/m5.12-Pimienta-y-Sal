<!DOCTYPE html>
<html lang="es">

<head>
  <title>Pimienta & sal</title>
  <link rel="stylesheet" href="/css/style.css">
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>

  <%- include('./partials/nav') %>

    <%- include("./partials/header") %>

      <!-- Page content -->
      <div class="ps-content">

        <!-- Menu Section -->
        <div class="ps-row ps-padding-64" id="menu">
          <div class="ps-col l6 ps-padding-large">
            <h1 class="ps-center">
              <%- plateRequired.nombre %>
            </h1>
            <br />
            <h4>
              <%- plateRequired.descripcion %>
            </h4>
            <p class="ps-text-grey">
              <%- plateRequired.precio %>
            </p>
          </div>

          <div class="ps-col l6 ps-padding-large ps-img-menu">
            <img src="/images/<%- plateRequired.foto %>" class="ps-round ps-image ps-opacity-min" alt="Menu" />
          </div>
        </div>

        <%- include('./partials/footer') %>
      </div>
</body>

</html>